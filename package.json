{
  "name": "doc-system",
  "version": "1.0.0",
  "description": "A lightweight documentation system similar to Docusaurus",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node scripts/dev.js",
    "serve": "node scripts/serve.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "documentation",
    "markdown",
    "static-site-generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^4.0.3",
    "express": "^5.2.0",
    "front-matter": "^4.0.2",
    "fuse.js": "^7.1.0",
    "highlight.js": "^11.9.0",
    "marked": "^17.0.1",
    "marked-highlight": "^2.1.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "happy-dom": "^20.0.11",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
